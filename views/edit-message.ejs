<h2>Edit Your Message</h2>

<p>You can update your message title and content below. Please ensure it follows community guidelines.</p>

<!-- Error messages (from express-validator or manual logic) -->
<% if (typeof errors !== "undefined" && errors.length > 0) { %>
  <div class="flash error">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/message/<%= message.id %>/edit" method="POST" class="edit-form">
  <div class="form-group">
    <label for="title">📝 Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= message.title %>"
      required
      placeholder="Enter message title"
    />
  </div>

  <div class="form-group">
    <label for="content">💬 Content:</label>
    <textarea
      id="content"
      name="content"
      rows="6"
      required
      placeholder="Update your message here..."
    ><%= message.content %></textarea>
  </div>

  <button type="submit" class="submit-btn">Update Message</button>
</form>

<hr>

<!-- Optional: Preview -->
<h3>Live Preview</h3>
<div class="preview-box">
  <h4><%= message.title %></h4>
  <p><%= message.content %></p>
</div>

<!-- Navigation -->
<p><a href="/">← Back to Messages</a></p>
